{% extends "./layouts/guest.html.j2" %}

{% block content %}
<div class="d-flex justify-content-center align-items-centercontainer-fluid my-4">

  <div class="m-4 mt-6 p-4 bg-dark text-white w-50 p-2 border rounded ">
    <form action="/register" method="post">
      <fieldset>
        <legend class="text-center m-2 mb-4">User Register</legend>
        <p>
          <label for="username" class="w-25">Username</label>
          <input required name="username" id="username" value="ferris2" />
        </p>
        <p>
          <label for="username" class="w-25">Email</label>
          <input required name="username" id="username" value="ferris@example.com" />
        </p>
        <p>
          <label for="password" class="w-25">Password</label>
          <input required name="password" id="password" type="password" value="password" />
        </p>
        <p>
          <label for="password2" class="w-25">Confirm Password</label>
          <input required name="password2" id="password2" type="password" value="password" />
        </p>
      </fieldset>
      <div class="d-flex justify-content-center">
        <input type="submit" class="" value="register" />
      </div>

      {% if let Some(next) = next %}
      <input type="hidden" name="next" value="{{next}}" />
      {% endif %}
    </form>
    <a href="/login" class="text-white">Log in</a>
  </div>
</div>
{% endblock content %}